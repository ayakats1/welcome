<div class="container">
  <div class="row justify-content-center">
    <h2>投稿一覧</h2>
  </div>
  <div class="row justify-content-center">
    <table class="table">
      <thead class="table-secondary">
        <tr>
          <th>ID</th>
          <th>Shop名</th>
          <th>タイトル</th>
          <th>レビュー数</th>
        </tr>
      </thead>
      <% @posts.each do |post| %>
      <tbody>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.shop.shop_name %></td>
          <td>
            <%= link_to admin_post_path(post.id) do %>
              <%= post.title %>
            <% end %>
            </td>
          <td><%#= post. %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>