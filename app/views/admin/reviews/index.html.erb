<div class="container">
  <div class="row justify-content-center">
    <h2>レビュー一覧</h2>
  </div>
  <div class="row justify-content-center">
    <table class="table">
      <thead class="table-secondary">
        <tr>
          <th>ID</th>
          <th>User名</th>
          <th>レビュー</th>
          <th>Shop名</th>
        </tr>
      </thead>
      <% @reviews.each do |review| %>
      <tbody>
        <tr>
          <td><%= review.id %></td>
          <td><%= review.user.last_name %><%= review.user.first_name %></td>
          <td>
            <%= link_to admin_review_path(review.id) do %>
              <%= review.review %>
            <% end %>
              </td>
          <td><%= review.post.shop.shop_name %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>