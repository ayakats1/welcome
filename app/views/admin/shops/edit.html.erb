<div class="container">
  <div class="row justify-content-center">
    <h2>店舗会員情報編集</h2>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @shop, url: admin_shop_path(@shop), method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>
            <%= f.label :氏名 %>
          </th>
          <td>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :フリガナ %>
          </th>
          <td>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :店名 %>
          </th>
          <td>
            <%= f.text_field :shop_name %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :フリガナ %>
          </th>
          <td>
            <%= f.text_field :shop_name_kana %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :郵便番号 %>
          </th>
          <td>
            <%= f.text_field :postal_code %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :住所 %>
          </th>
          <td>
            <%= f.text_field :address, :size => "60*60" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :電話番号 %>
          </th>
          <td>
            <%= f.text_field :telephone_number %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :メールアドレス %>
          </th>
          <td>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :営業時間 %>
          </th>
          <td>
            <%= f.text_field :opening_hours %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :定休日 %>
          </th>
          <td>
            <%= f.text_field :regular_holiday %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :駐車場 %>
          </th>
          <td>
            <%= f.text_field :parking %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :ステータス %>
          </th>
          <td>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, '有効', value: false %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '退会', value: true %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>
