<div class="container">
  <div class="row justify-content-center">
    <h2>User一覧</h2>
  </div>
  <div class="row justify-content-center">
    <table class="table">
      <thead class="table-secondary">
        <tr>
          <th>ID</th>
          <th>User名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user.id) do %>
              <%= user.last_name %><%= user.first_name %>
            <% end %>
          </td>
          <td><%= user.email %></td>
            <% case user.is_deleted %>
            <% when false then %>
              <td class="text-success">有効</td>
            <% else %>
              <td class="text-danger">退会</td>
            <% end %>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>