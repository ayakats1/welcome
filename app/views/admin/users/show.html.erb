<div class="container">
  <div class="row justify-content-center mt-3 mb-3">
    <h2><%= @user.last_name %><%= @user.first_name %>様の会員情報</h2>
  </div>

    <div class="row mb-2">
        <%= link_to "編集する", edit_admin_user_path, class: "btn btn-success" %>
    </div>
    <div class="row mb-2">
      <table class="table table-bordered">
        <tr>
          <th class="table-active" width="30%">氏名</th>
          <td width="70%">
            <%= @user.last_name %>
            <%= @user.first_name %>
          </td>
        </tr>
        <tr>
          <th class="table-active">カナ</th>
          <td>
            <%= @user.last_name_kana %>
            <%= @user.first_name_kana %>
          </td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th class="table-active">ステータス</th>
            <% case @user.is_deleted %>
            <% when false then %>
              <td class="text-success">有効</td>
            <% else %>
              <td class="text-danger">退会</td>
            <% end %>
        </tr>
      </table>
    </div>
</div>