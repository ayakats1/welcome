<div class="container">
  <div class="row background-top" style="margin-top:50px;">
    <div class="col-lg-12 main-visual-text">
      <h1>WELCOME</h1>
    </div>
  </div>

  <div class="row" style="margin-top: 80px;">
    <div class="col">
      <%= image_tag "peter-dawn.jpg", class: "about-img" %>
    </div>
    <div class="col">
      <h1 class="text-center">About us</h1>
      <h4 class="text-center mb-5">
        texttexttexttexttexttexttext<br>
        texttexttexttexttexttexttext<br>
        texttexttexttexttexttexttext
      </h4>
      <div style="text-align:center;">
        <%= link_to "詳しく見る", about_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center" style="margin-top:50px;">
    <div class="col-lg">
      <h1 class="text-center mb-5">Informations</h1>
    </div>
  </div>

  <div class="row justify-content-center">
    <% @posts.each do |post| %>
      <div class="col-3 shadow float text-center align-self-center ml-4 mb-4" style="height: 406px">
        <%= link_to post_path(post.id), class: "col-4 text-dark" do %>
          <h4 class="caption">
            <%= post.shop.shop_name %>
          </h4>
            <p class="caption text-break">
              <%= post.title %>
            </p>
          <p>
            <% if post.image.attached? %>
              <%= image_tag post.image, class: "index-img" %>
            <% else %>
              <%= image_tag "no_image.jpg", class: "index-img" %>
            <% end %>
          </p>
            <% weeks = ["月","火","水","木","金","土","日"] %>
            <% index = post.created_at_gteq.strftime("%u").to_i %>
            <% index2 = post.created_at_lteq_end_of_day.strftime("%u").to_i %>
          <p class="caption">
            <%= post.created_at_gteq.strftime("%Y年%-m月%-d日 (#{weeks[index - 1]})") %><br>
            ~<%= post.created_at_lteq_end_of_day.strftime("%Y年%-m月%-d日 (#{weeks[index2 - 1]})") %>
          </p>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="text-right mb-5">
    <%= link_to '全ての広告を見る＞', posts_path, class: "col-4 text-dark" %>
  </div>

</div>
