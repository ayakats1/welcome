<div class="container">
  <div class="row justify-content-center">
    <h2>投稿編集</h2>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @post, url: shop_post_path(@post.id), method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>画像</th>
          <td><%= f.file_field :image %></td>
        </tr>
        <tr>
          <th>期間</th>
          <td>
            <%= f.date_field :created_at_gteq %>
            <span>~</span>
            <%= f.date_field :created_at_lteq_end_of_day %>
          </td>
        </tr>
        <tr>
          <th>タイトル</th>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <th>内容</th>
          <td><%= f.text_area :body %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td>
            <%= f.text_field :postal_code %><br>
            <%= f.text_field :address %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>