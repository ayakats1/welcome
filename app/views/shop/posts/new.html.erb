  <h2>新規投稿画面</h2>

    <h2>新規投稿</h2>
      <%= form_with model: @post, url: shop_posts_path, method: :post do |f| %>
        <table class="table table-borderless">
          <tr>
            <th>画像</th>
            <th><%= f.file_field :image, accept: "image/*" %></th>
          </tr>
          <tr>
            <th>期間</th>
            <th>
              <%= f.date_field :created_at_gteq %>
              <span>~</span>
              <%= f.date_field :created_at_lteq_end_of_day %>
            </th>
          </tr>
          <tr>
            <th>タイトル</th>
            <th><%= f.text_field :title %></th>
          </tr>
          <tr>
            <th>内容</th>
            <th><%= f.text_area :body %></th>
          </tr>
          <tr>
            <th><%= f.submit '新規登録', class: "btn btn-success" %></th>
          </tr>
        </table>
      <% end %>
