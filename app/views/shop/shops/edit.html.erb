<h2>店舗会員情報編集</h2>
  <%= form_with model: @shop, url: shop_shop_path, method: :patch do |f| %>
    <table class="table table-borderless">
      <tr>
        <th><%= f.label :氏名 %></th>
        <th>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </th>
      </tr>
      <tr>
        <th><%= f.label :フリガナ %></th>
        <th>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
        </th>
      </tr>
      <tr>
        <th><%= f.label :店名 %></th>
        <th>
          <%= f.text_field :shop_name %>
        </th>
      </tr>
      <tr>
        <th><%= f.label :フリガナ %></th>
        <th>
          <%= f.text_field :shop_name_kana %>
        </th>
      </tr>
      <tr>
        <th><%= f.label :郵便番号 %></th>
        <th><%= f.text_field :postal_code %></th>
      </tr>
      <tr>
        <th><%= f.label :住所 %></th>
        <th><%= f.text_field :address, :size => "60*60" %></th>
      </tr>
      <tr>
        <th><%= f.label :電話番号 %></th>
        <th><%= f.text_field :telephone_number %></th>
      </tr>
      <tr>
        <th><%= f.label :メールアドレス %></th>
        <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
      </tr>
    </table>
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
    <%= link_to "退会する", unsubscribe_shop_shop_path, class: "btn btn-danger" %>
  <% end %>