<div class="container">
  <div class="row justify-content-center mt-3 mb-3">
    <h2><%= @shop.shop_name %>様</h2>
  </div>
  <div class="row mb-2">
    <%= link_to "編集する", edit_shop_shop_path, class: "btn btn-success" %>
  </div>

  <div class="row">
    <div class="col-10">
      <table class="table">
        <tr>
          <th width="20%">氏名</th>
          <td width="80%">
            <%= @shop.last_name %>
            <%= @shop.first_name %>
          </td>
        </tr>
        <tr>
          <th>カナ</th>
          <td>
            <%= @shop.last_name_kana %>
            <%= @shop.first_name_kana %>
          </td>
        </tr>
        <tr>
          <th>Shop名</th>
          <td>
            <%= @shop.shop_name %>
          </td>
        </tr>
        <tr>
          <th>カナ</th>
          <td>
            <%= @shop.shop_name_kana %>
          </td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @shop.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @shop.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @shop.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @shop.email %></td>
        </tr>
        <tr>
          <th>営業時間</th>
          <td><%= @shop.opening_hours %></td>
        </tr>
        <tr>
          <th>定休日</th>
          <td><%= @shop.regular_holiday %></td>
        </tr>
        <tr>
          <th>駐車場</th>
          <td><%= @shop.parking %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col">
      <table>
        
      </table>
    </div>
  </div>
  
</div>  