<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class="table table-borderless">
    <tr>
      <th>
        <%= f.label :メールアドレス %>
      </th>
      <td>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "40*40" %>
      </td>
    </tr>
    <tr>
      <th>
        <%= f.label :パスワード %>
      </th>
      <td>
        <%= f.password_field :password, autocomplete: "current-password", :size => "40*40" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </td>
    </tr>
  </table>
<% end %>

