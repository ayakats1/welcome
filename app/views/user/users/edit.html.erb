<div class="container">
  <div class="row justify-content-center">
    <h2>会員情報編集</h2>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @user, url: users_my_page_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <th><%= f.label :氏名 %></th>
          <td>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </td>
        </tr>
        <tr>
          <th><%= f.label :フリガナ %></th>
          <td>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>
        <tr>
          <th><%= f.label :メールアドレス %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %>
          </td>
        </tr>
      </table>
    <% end %>
 </div>
</div>